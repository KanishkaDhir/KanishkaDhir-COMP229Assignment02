<%- include ../partials/header.ejs%>

<!--Content for add-edit page-->

<div class="container">
   <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title%></h1>
            
            <form class="form" method="POST">
                <div class="form-group">
                    <input type="hidden" name="id" value="<%= item._id %>">
                    <label for="itemTextField">Item Name</label>
                    <input type="text" class="form-control" id="itemTextField" placeholder="Enter the item Name" name="item" value="<%= item.item%>"
                      required>
                </div>
                <br/>
                <div class="form-group">
                    <label for="QtyTextField">Quantity</label>
                    <input type="number" class="form-control" id="QtyTextField" placeholder="00" name="qty" value="<%= item.qty%>"
                      required>
                </div>
                <br/>
                <div class="card">
                    <div class="card-header">Size</div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="HeightTextField">Hieght</label>
                            <input type="number" step="0.01" class="form-control" id="HieghtTextField" placeholder="0.00" name="h_size" value="<%= item.size.h%>"
                              required>
                        </div>
                        <div class="form-group">
                            <label for="WidthTextField">Width</label>
                            <input type="number" step="0.01" class="form-control" id="WidthTextField" placeholder="0.00" name="w_size" value="<%= item.size.w%>"
                              required>
                        </div>
                        <div class="form-group">
                            <label for="UOMTextField">UOM</label>
                            <input type="text" class="form-control" id="UOMTextField" placeholder="cm" name="uom_size" value="<%= item.size.uom%>"
                              required>
                        </div>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <label for="TagTextArea">Tags</label>
                    <textarea type="text" class="form-control" id="TagTextArea" placeholder="Enter the tag name" name="tag" ><%= item.tags%></textarea>
                </div>
                <br/>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i>
                    Submit
                </button>
                
                <a href="/inventory/list" class="btn btn-warning">
                    <i class="fas fa-undo"></i>Cancel
                </a>
            </form>

        </div>
   </div>
</div>


<%- include ../partials/footer.ejs%>